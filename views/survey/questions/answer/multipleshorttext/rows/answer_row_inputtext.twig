{#
/**
 * Multiple Short Text Row - DSFR Theme
 * Balanced 50/50 layout
 */
#}

<!--answer_row_inputtext -->
<li id="javatbd{{ myfname }}" class="question-item answer-item text-item fr-mb-3w{% if alert %} ls-error-mandatory has-error{% endif %}{{ extraclass }}" {{ sDisplayStyle }}>
    <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-12 fr-col-md-6">
            <label class="fr-label fr-ml-1w" for="answer{{ myfname }}">
                {{ processString(question) }}
            </label>
        </div>
        <div class="fr-col-12 fr-col-md-6">
        {% if prefix != '' or suffix != '' %}
        <div class="ls-input-group">
        {% endif %}
            {% if prefix != '' %}
                <div class="ls-input-group-extra prefix-text prefix">
                    {{ processString(prefix) }}
                </div>
            {% endif %}
            <input
                class="fr-input {{ kpclass }}"
                type="text"
                name="{{ myfname }}"
                id="answer{{ myfname }}"
                value="{{ dispVal }}"
                placeholder="{{ flatString(processString(placeholder,1),1) }}"
                aria-label="{{ processString(question) }}"
                {% if inputsize %} size="{{ inputsize }}" {% endif %}
                {% if maxlength %} maxlength="{{ maxlength }}" {% endif %}
                {% if numbersonly %} data-number="{{ numbersonly }}" {% endif %}
            />
            {% if suffix != '' %}
                <div class="ls-input-group-extra suffix-text suffix">
                    {{ processString(suffix) }}
                </div>
            {% endif %}
        {% if prefix != '' or suffix != '' %}
        </div>
        {% endif %}
        </div>
    </div>
</li>
<!-- end of answer_row_inputtext -->
