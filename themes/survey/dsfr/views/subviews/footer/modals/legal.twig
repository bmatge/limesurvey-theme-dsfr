{# Modale Mentions légales #}
<dialog id="legal-modal" class="fr-modal" aria-labelledby="legal-modal-title">
    <div class="fr-container fr-container--fluid fr-fr-container">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-10">
                <div class="fr-modal__body">
                    <div class="fr-modal__header">
                        <button class="fr-btn--close fr-btn" aria-controls="legal-modal">{{ gT("Close") }}</button>
                    </div>
                    <div class="fr-modal__content">
                        <h1 id="legal-modal-title" class="fr-modal__title">
                            Mentions légales
                        </h1>

                        <h2>Éditeur</h2>
                        <p>
                            <strong>[Nom de l'organisme]</strong><br>
                            [Adresse]<br>
                            [Code postal] [Ville]<br>
                            Tél : [Téléphone]
                        </p>

                        <h2>Directeur de la publication</h2>
                        <p>[Nom et fonction]</p>

                        <h2>Hébergement</h2>
                        <p>
                            <strong>LimeSurvey</strong><br>
                            Plus d'informations : <a href="https://www.limesurvey.org" target="_blank" rel="noopener">limesurvey.org</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</dialog>
