{#
/**
 * Multiple Choice Item Row - DSFR Theme
 * Checkbox with DSFR fr-checkbox-group
 *
 * Variables available:
 * @var $name
 * @var $title
 * @var $question
 * @var $checkedState
 * @var $sCheckconditionFunction
 * @var $myfname
 * @var $sValue
 * @var $kpclass
 * @var $relevanceClass
 */
#}
<!-- answer_row -->
<li id='javatbd{{ myfname }}' class='question-item answer-item checkbox-item dsfr-enhanced {{ relevanceClass }}'>
    <div class="fr-checkbox-group">
        <input
            class="fr-checkbox-input {{ kpclass }}"
            type="checkbox"
            name="{{ myfname }}"
            id="answer{{ myfname }}"
            {{ checkedState }}
            value="Y"
            aria-label="{{ processString(question) }}"
        />
        <label class="fr-label" for="answer{{ myfname }}">
            {{ processString(question) }}
        </label>
        <input
            type="hidden"
            name="java{{ myfname }}"
            id="java{{ myfname }}"
            value="{{ C.Html.encode( sValue ) }}"
        />
    </div>
</li>
<!-- end of answer_row -->
