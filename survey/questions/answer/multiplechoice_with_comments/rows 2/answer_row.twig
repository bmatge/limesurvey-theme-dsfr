 */
#}
<!-- answer_row -->
<li id="javatbd{{ name }}" class='checkbox-text-item answer-item checkbox-item fr-mb-3w' role='group'>
    <!-- Checkbox + label -->
    <div class="fr-grid-row">
        <div class="fr-col-md-{{ sLabelWidth }} fr-col-12 fr-checkbox-group fr-mb-2w">
            <div class="checkbox-item">
                <input
                    class="fr-checkbox-input {{ classes }} {{ kpclass }}"
                    title="{{ title }}"
                    type="checkbox"
                    name="{{ name }}"
                    id="{{ id }}"
                    value="{{ value }}"
                    {{ checked }}
                  />

                <label id="label-{{ id }}" for="{{ id }}" class="fr-label checkbox-label">{{ processString(labeltext) }}</label>
                {# Value for expression manager javascript (use val()) ; no need to submit #}
                {{ C.Html.hiddenField(javaname,javavalue,({
                    'id' : javaname,
                    'disabled' : true,
                }))
                }}
            </div>
        </div>

        <!-- Comment -->
        <div class="fr-col-md-{{ sInputContainerWidth }} fr-col-12 answer-item text-item comment-item fr-mb-2w">
                <input
                    class='fr-input {{ kpclass }}'
                    type='text'
                    id='{{ inputCommentId }}'
                    name='{{ inputCommentName }}'
                    value='{{ inputCOmmentValue }}'
                    aria-labelledby='label-{{ id }}'
                />
        </div>
    </div>
</li>
<!-- end of answer_row -->
