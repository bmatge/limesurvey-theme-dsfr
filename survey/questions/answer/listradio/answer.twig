{#
/**
 * List Radio - DSFR Theme
 * Radio buttons with DSFR fr-radio-group component
 *
 * Variables available:
 * @var $name
 * @var $value
 * @var $sRows
 * @var $iNbCols
 */
#}

<!-- DSFR Radio List -->
{{ sTimer }}
<fieldset class="fr-fieldset {{ coreClass }}" aria-labelledby="ls-question-text-{{ name }}">
    <div class="fr-fieldset__content">
        <div class="{% if iNbCols > 1 %}fr-grid-row fr-grid-row--gutters{% endif %}">
            {{ sRows }}
        </div>
    </div>
</fieldset>

{# Value for expression manager javascript #}
{{ C.Html.hiddenField("java"~name,value,({
    'id' : "java"~name,
    'disabled' : true,
}))
}}
<!-- end of answer -->
