{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 4,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.twig",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "tabWidth": 4
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "tabWidth": 4
      }
    }
  ]
}
