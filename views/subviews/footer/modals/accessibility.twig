{# Accessibility Statement Modal #}
<dialog id="accessibility-modal" class="fr-modal" aria-labelledby="accessibility-modal-title">
    <div class="fr-container fr-container--fluid fr-fr-container">
        <div class="fr-grid-row fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-10">
                <div class="fr-modal__body">
                    <div class="fr-modal__header">
                        <button class="fr-btn--close fr-btn" aria-controls="accessibility-modal">{{ gT("Close") }}</button>
                    </div>
                    <div class="fr-modal__content">
                        <h1 id="accessibility-modal-title" class="fr-modal__title">
                            {{ gT("Accessibility statement") }}
                        </h1>
                        <p>{{ gT("[Organization name] is committed to making its service accessible in accordance with Article 47 of Law No. 2005-102 of February 11, 2005.") }}</p>

                        <h2>{{ gT("Compliance status") }}</h2>
                        <p>{{ gT("This site is not yet compliant with RGAA. An audit will be conducted soon.") }}</p>

                        <h2>{{ gT("Non-accessible content") }}</h2>
                        <p>{{ gT("The content listed below is not accessible for the following reasons:") }}</p>
                        <ul>
                            <li>{{ gT("Non-compliance: RGAA audit not yet performed") }}</li>
                        </ul>

                        <h2>{{ gT("Improvement and contact") }}</h2>
                        <p>{{ gT("If you are unable to access content or a service, you can contact the site administrator to be directed to an accessible alternative.") }}</p>

                        <p><strong>{{ gT("Publication date:") }}</strong> {{ "now"|date("d/m/Y") }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</dialog>
